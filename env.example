# Infura RPC WebSocket URL (reusing from RPS project)
RPC_WSS_URL=wss://sepolia.infura.io/ws/v3/9aa3d95b3bc440fa88ea12eaa4456161

# Bot wallet private key (create a new wallet for the bot)
PRIVATE_KEY=0x...

# PingPong contract address (verified on Sepolia Etherscan)
PING_PONG_CONTRACT=0xa7f42ff7433cb268dd7d59be62b00c30ded28d3d

# Starting block number (optional - defaults to current block if not specified)
# Set this only if you want to process events from a specific block
# STARTING_BLOCK=7000000

# Database path
DB_PATH=./bot.db

# AWS credentials for CloudWatch logs (optional)
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key
AWS_DEFAULT_REGION=eu-west-3

# Deployment configuration
LIGHTSAIL_IP=Public_IPv4_address
SSH_KEY_PATH=LightsailDefaultKey-eu-west-3.pem
